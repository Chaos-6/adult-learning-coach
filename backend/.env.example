# =============================================================
# Adult Learning Coaching Agent - Environment Configuration
# =============================================================
# Copy this to .env and fill in your values:
#   cp .env.example .env
# NEVER commit .env to Git.
# =============================================================

# --- Database ---
# Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/coaching_db
DATABASE_URL_SYNC=postgresql://postgres:your_password@localhost:5432/coaching_db

# --- AI / Transcription APIs ---
# Get your key at https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Get your key at https://www.assemblyai.com/dashboard/
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# --- Task Queue ---
REDIS_URL=redis://localhost:6379/0

# --- AWS S3 (optional for MVP - uses local storage by default) ---
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_REGION=us-west-2
AWS_S3_BUCKET=coaching-videos

# --- Security ---
# Generate with: python -c "import secrets; print(secrets.urlsafe_b64encode(secrets.token_bytes(32)).decode())"
SECRET_KEY=change-this-to-a-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Application ---
APP_ENV=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000
